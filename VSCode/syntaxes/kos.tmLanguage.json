{
    "scopeName": "source.kos",
    "patterns": [
      {
        "include": "#comments"
      },
      {
        "include": "#keywords"
      },
      {
        "include": "#operators"
      },
      {
        "include": "#numbers"
      }
    ],
    "repository": {
      "comments": {
        "patterns": [
          {
            "name": "comment.line.double-slash.kos",
            "begin": "//",
            "beginCaptures": {
              "0": {
                "name": "punctuation.definition.comment.kos"
              }
            },
            "end": "$",
            "patterns": [
              {
                "include": "#todo"
              }
            ]
          }
        ]
      },
      "keywords": {
        "patterns": [
          {
            "name": "keyword.control.kos",
            "match": "\\b(BREAK|DO|ELSE|FOR|FROM|IF|IN|LOCK|PRESERVE|RETURN|STEP|THEN|UNTIL|WAIT|WHEN|DECLARE|FUNCTION|GLOBAL|IS|LOCAL|LOG|OFF|ON|ONCE|PARAMETER|PRINT|REBOOT|RENAME|RUN|SET|SWITCH|TO|UNLOCK|UNSET)\\b"
          },
          {
            "name": "keyword.operator.kos",
            "match": "\\b(AND|OR|NOT|ON|OFF)\\b"
          }
        ]
      },
      "operators": {
        "patterns": [
          {
            "name": "keyword.operator.kos",
            "match": "\\+|-|\\*|/|\\^|:|\\(|\\)|,|=|<|>|<>|>=|<=|\\[|\\]|\\."
          }
        ]
      },
      "numbers": {
        "patterns": [
          {
            "name": "constant.numeric.kos",
            "match": "\\b\\d+(\\.\\d+)?\\b"
          }
        ]
      },
      "todo": {
        "patterns": [
          {
            "name": "keyword.other.todo.kos",
            "match": "\\b(TODO|FIX|BUG|TEST|NOTE):"
          }
        ]
      }
    }
  }
